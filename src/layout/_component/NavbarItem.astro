---
interface Props {
  title: string;
  href?: string;
}
const { title, href } = Astro.props;
---

<li class="nav-item">
  <a class="nav-link" aria-current="page" href={href}>{title}</a>
</li>

<style is:global lang="scss">
  .nav-item {
    a {
      font-weight: 600;
      transition: 300ms;
      color: var(--text);
      transition: 500ms;
    }
    a:hover {
      color: var(--primary) !important;
    }
  }
</style>
